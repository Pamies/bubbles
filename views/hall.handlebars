<audio id="home-music" src="/audio/background.mp3" autoplay></audio>
<div id="WebGL-output">
  <div id="form">
    <h3 id="form-title">Registration</h3>
    <form method="POST">
      <input id="name" type="text" name="name" placeholder="Name"
        required /><br />
      <input id="surname" type="text" name="surname" placeholder="Surname"
        required><br />
      <label>Birth date:</label><br />
      <input id="birth" type="date" name="birth" required><br />
      <label>E-mail:</label><br />
      <input id="email" type="email" name="email"
        placeholder="your@mail.com" required><br />
      <label>Gender:</label><br />
      <input id="sex-f" type="radio" name="sex" value="Female">
      <input id="sex-m" type="radio" name="sex" value="Male">
      <button id="go">Go!</button>
    </form>
  </div>
  <div id="sound-control">
    <img src="/img/mute-sound-light.png" width="24" height="24">
    <span id="sound-info">ON</span>
  </div>
</div>
